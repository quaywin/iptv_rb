server {
    listen 80;
    server_name robong.quaywin.com;
    
    # Tự động chuyển hướng HTTP sang HTTPS
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl;
    server_name robong.quaywin.com;

    # --- CẤU HÌNH SSL ---
    # Đường dẫn đến file chứng chỉ Certbot đã tạo
    ssl_certificate /etc/letsencrypt/live/robong.quaywin.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/robong.quaywin.com/privkey.pem;

    # Tối ưu hóa bảo mật SSL
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 1d;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384;
    ssl_prefer_server_ciphers off;

    # --- TỐI ƯU HÓA STREAMING ---
    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;

    location / {
        proxy_pass http://127.0.0.1:3030;
        
        # Headers bắt buộc cho Proxy
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # CẤU HÌNH QUAN TRỌNG CHO STREAM VIDEO
        # 1. Tắt buffering để giảm độ trễ (Latency)
        proxy_buffering off;

        # 2. Timeout dài (24h) để không ngắt kết nối khi xem lâu
        proxy_read_timeout 24h;
        proxy_send_timeout 24h;
    }
}
